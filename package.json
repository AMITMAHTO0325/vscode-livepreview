{
	"name": "live-server",
	"displayName": "Live Server",
	"description": "An extension that hosts your web project for previewing.",
	"version": "0.0.4",
	"publisher": "andrea-mah",
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/andreamah/VS-Code-LiveServer-V2-Extension"
	},
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/*.html",
		"onWebviewPanel:browserPreview"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "LiveServer.start.preview.atIndex",
				"title": "Live Server: Show Preview at Index Page"
			},
			{
				"command": "LiveServer.start.preview.atFile",
				"title": "Live Server: Show Preview",
				"icon": "$(open-preview)"
			},
			{
				"command": "LiveServer.start.externalPreview.atIndex",
				"title": "Live Server: Show Preview at Index (External Browser)"
			},
			{
				"command": "LiveServer.start.internalPreview.atIndex",
				"title": "Live Server: Show Preview at Index (Internal Browser)"
			},
			{
				"command": "LiveServer.start.externalPreview.atFile",
				"title": "Live Server: Show Preview (External Browser)"
			},
			{
				"command": "LiveServer.start.internalPreview.atFile",
				"title": "Live Server: Show Preview (Internal Browser)"
			},
			{
				"command": "LiveServer.end",
				"title": "Live Server: Force Stop Development Server"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "LiveServer.start.preview.atFile",
					"when": "editorLangId == html && !notebookEditorFocused",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "LiveServer.start.preview.atFile",
					"when": "resourceLangId == html",
					"group": "1_liveserver"
				}
			],
			"commandPalette": [
				{
					"command": "LiveServer.start.preview.atFile",
					"when": "editorLangId == html && !notebookEditorFocused",
					"group": "navigation"
				},
				{
					"command": "LiveServer.start.internalPreview.atFile",
					"when": "editorLangId == html && !notebookEditorFocused",
					"group": "navigation"
				},
				{
					"command": "LiveServer.start.externalPreview.atFile",
					"when": "editorLangId == html && !notebookEditorFocused",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "Live Server",
			"properties": {
				"LiveServer.portNum": {
				  "type": "number",
				  "default": 3000,
				  "minimum": 0,
				  "maximum": 65535,
				  "description": "Which local port the live server should try initially. If this port number doesn't work, it will increment the port number until it finds a free port."
				},
				"LiveServer.serverKeepAliveAfterEmbeddedPreviewClose": {
				  "type": "number",
				  "default": 3,
				  "minimum": 0,
				  "maximum": 20,
				  "description": "How many minutes after closing the embedded preview you want the server to shut off. Set to 0 to have server stay on indefinetely."
				},
				"LiveServer.showStatusBarItem": {
				  "type": "boolean",
				  "default": true,
				  "description": "Whether to show the current hosting port when server is open on the status bar."
				},
				"LiveServer.showServerStatusPopUps": {
					"type": "boolean",
					"default": false,
					"description": "Whether or not to show information messages on server on/off status change."
				},
				"LiveServer.autoRefreshPreview": {
					"enum": [
					  "On All Changes in Editor",
					  "On Changes to Saved Files",
					  "Never"
					],
					"default": "On All Changes in Editor",
					"description": "How often to automatically refresh the preview."
				},
				"LiveServer.openPreviewTarget": {
					"enum": [
					  "Embedded Preview",
					  "External Browser"
					],
					"default": "On All Changes in Editor",
					"description": "Preferred target for previews."
				},
				"LiveServer.browserPreviewLaunchServerLogging": {
					"type": "boolean",
					"default": true,
					"description": "Upon running `Live Server: Show Preview in External Browser`, whether the auto-general terminal has logging."
				}
			}
		},
		"taskDefinition": 
			{
				"type": "Live Server",
				"required": [
					"args"
				],
				"properties": {
					"args": {
						"type": "string",
						"description": "Whether to show incoming server messages and status codes."
					}
				}
			}
		
	},
	
   
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"build-preview": "npx webpack-cli --mode development",
		"compile": "node codicon_copy.js && tsc -p ./",
		"watch": "node codicon_copy.js && tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.32.0",
		"@types/ws": "^7.4.4",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"esbuild": "^0.12.5",
		"eslint": "^7.27.0",
		"ts-loader": "^9.2.2",
		"typescript": "^4.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	},
	"dependencies": {
		"clean-webpack-plugin": "^4.0.0-alpha.0",
		"copy-webpack-plugin": "^9.0.0",
		"prettier-eslint": "^12.0.0",
		"prettier-eslint-cli": "^5.0.1",
		"url": "^0.11.0",
		"vsce": "^1.91.0",
		"vscode-codicons": "0.0.17",
		"ws": "^7.4.6"
	}
}
