{
	"name": "live-server",
	"displayName": "Live Server",
	"description": "An extension that hosts your web project for previewing.",
	"version": "0.0.4",
	"publisher": "andrea-mah",
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/andreamah/VS-Code-LiveServer-V2-Extension"
	},
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:html",
		"onWebviewPanel:browserPreview"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "liveserver.start",
				"title": "Live Server: Start Development Server"
			},
			{
				"command": "liveserver.start.preview.atIndex",
				"title": "Live Server: Show Preview to the Side at Index Page"
			},
			{
				"command": "liveserver.start.preview.atActiveFile",
				"title": "Live Server: Show Preview to the Side",
				"icon": "$(open-preview)"
			},
			{
				"command": "liveserver.end",
				"title": "Live Server: Force Stop Development Server"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "liveserver.start.preview.atActiveFile",
					"when": "editorLangId == html && !notebookEditorFocused",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "Live Server",
			"properties": {
				"liveserver.portNum": {
				  "type": "number",
				  "default": 3000,
				  "minimum": 0,
				  "maximum": 65535,
				  "description": "Which local port the live server should try initially. If this port number doesn't work, it will increment the port number until it finds a free port."
				},
				"liveserver.showStatusBarItem": {
				  "type": "boolean",
				  "default": true,
				  "description": "Whether to show the current hosting port when server is open on the status bar."
				},
				"liveserver.showServerStatusPopUps": {
					"type": "boolean",
					"default": false,
					"description": "Whether or not to show information messages on server on/off status change."
				},
				"liveserver.autoRefreshPreview": {
					"enum": [
					  "On All Changes in Editor",
					  "On Changes to Saved Files",
					  "Never"
					],
					"default": "On All Changes in Editor",
					"description": "How often to automatically refresh the preview."
				}
			}
		},
		"taskDefinition": 
			{
				"type": "Live Server",
				"required": [
					"flavor"
				],
				"properties": {
					"flavor": {
						"type": "string",
						"description": "Whether to show incoming server messages and status codes."
					}
				}
			}
		
	},
	
   
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"build-preview": "npx webpack-cli --mode development",
		"compile": "node codicon_copy.js && tsc -p ./",
		"watch": "node codicon_copy.js && tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.32.0",
		"@types/ws": "^7.4.4",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"esbuild": "^0.12.5",
		"eslint": "^7.27.0",
		"ts-loader": "^9.2.2",
		"typescript": "^4.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	},
	"dependencies": {
		"clean-webpack-plugin": "^4.0.0-alpha.0",
		"copy-webpack-plugin": "^9.0.0",
		"prettier-eslint": "^12.0.0",
		"prettier-eslint-cli": "^5.0.1",
		"url": "^0.11.0",
		"vsce": "^1.91.0",
		"vscode-codicons": "0.0.17",
		"ws": "^7.4.6"
	}
}
